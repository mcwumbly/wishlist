<div class='col-md-6 col-xs-10'>
  <%= form_for @user, url: '/register',
    html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <div class='form-group'>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'you@domain.com', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: 'username', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :gender %>
    <%= f.select :gender, ['Male', 'Female'], {}, { class: 'form-control' } %>
  </div>
  <div class='form-group'>
    <%= f.label :birthday %>
    <%= f.date_field :birthday, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'password', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: 'type password again', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.submit class: 'btn btn-default btn-block' %>
  </div>
<% end %>
</div>

<script type='text/javascript'>
  $(document).ready(function() {
    $("#new_user").validate({
      rules:{
        "user[email]": {
          required: true,
          email: true
        },
        "user[birthday]": "required",
        "user[username]": {
          required: true,
          minlength: 3
        },
        "user[password]": {
          required: true,
          minlength: 8
        },
        "user[password_confirmation]": {
          required: true,
          equalTo: "#user_password"
        },
        errorClass: "help-inline"
      }
    })
  })
</script>
