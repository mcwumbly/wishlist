<%= form_for User.new, url: '/signin',
    html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <div class='form-group'>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'you@domain.org', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'password', class: 'form-control' %>
  </div>
  <%= f.submit 'Sign In', class: 'btn btn-default btn-block' %>
<% end %>
